          for (i = 3; i < 13; i += 9) { \
            for (j = 3; j < 13; j += 9) { \
               printf("newcurve marktype box marksize 4 4\n"); \
               printf("linetype solid cfill 1 1 1\n"); \
               printf("pts %f %f\n", i, j); \
