newgraph

(* Initial graph  *)
xaxis min 0 max 15 hash 1 mhash 0 size 5 
    no_draw_hash_marks
    no_auto_hash_labels
yaxis min 0 max 15 hash 1 mhash 0 size 5
    no_draw_hash_marks
    no_auto_hash_labels
        grid_lines grid_gray 0


(* Long colored paths leading to home base  *)
newcurve marktype box marksize 5 1 
        linetype solid cfill 1 0 0
    pts 3.5 7.5

newcurve marktype box marksize 5 1 
        linetype solid cfill 0.9 0.8 0
    pts 11.5 7.5

newcurve marktype box marksize 1 5 
        linetype solid cfill 0 0 1
    pts 7.5 3.5 

newcurve marktype box marksize 1 5 
        linetype solid cfill 0 0.4 0
    pts 7.5 11.5


(* Each player's starting colored square *)

newcurve marktype box marksize 1 1 
        linetype solid cfill 1 0 0
    pts 1.5 8.5 
newcurve marktype box marksize 1 1 
        linetype solid cfill 0 0 1
    pts 6.5 1.5 
newcurve marktype box marksize 1 1 
        linetype solid cfill 0.9 0.8 0
    pts 13.5 6.5 
newcurve marktype box marksize 1 1 
        linetype solid cfill 0 0.4 0 
    pts 8.5 13.5

